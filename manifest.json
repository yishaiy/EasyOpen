{
  "manifest_version": 2,

  "name": "EasyOpen",
  "description": "This extension make it easy to open search results using the keyboard",
  "version": "1.0.3.1",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "include_globs": [
        "http://*.google.*/search*q=*",
        "https://*.google.*/search*q=*"
      ],
      "js": [ "easyOpen.js" ],
      "css": [ "easyOpen.css" ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  }
}
